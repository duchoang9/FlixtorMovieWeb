extends layout

block content
  .container
    .row.justify-content-center.mt-5
      .col-lg-6.col-md-8.col-sm-12
        .card.shadow
          .card-header.bg-primary.text-white.text-center
            h3.mb-0 Chỉnh sửa thông tin cá nhân
          .card-body
            form(method='POST', action='/editprofile')
              .form-group
                label(for='username') Tên đăng nhập
                input#username.form-control(type='text', name='username', value='#{user.username}', required)
              .form-group
                label(for='email') Địa chỉ email
                input#email.form-control(type='email', name='email', value='#{user.email}', required)
              .form-group
                label(for='password') Mật khẩu mới
                input#password.form-control(type='password', name='password', required)
              .form-group
                label(for='confirm-password') Xác nhận mật khẩu mới
                input#confirm-password.form-control(type='password', name='confirm-password', required)
              button.btn.btn-primary(type='submit') Cập nhật