doctype html
html(lang="en")
  head
    title= title
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css", rel="stylesheet")
    link(rel="stylesheet" type="text/css" href="/css/home.css")

  body
    header
      nav
        ul
          li
            a(href="#") Home
          li
            a(href="#") Categories
          li
            a(href="#") About
          li
            a(href="#") Contact

    main
    form(action='/search', method='get')
      div.form-group
        label(for='keyword') Search
        input.form-control(type='text', name='keyword', placeholder='Enter movie title')
        button.btn.btn-primary(type='submit') Submit
    if results && results.length > 0
      h2 Search Results
      each movie in results
        div.movie
          h3= movie.title
          p= movie.description
          p= movie.release
          p.rating
            span.fa.fa-star
            span.rating-value= movie.rating
    else
      p
    section
      if hotMovies && hotMovies.length > 0
        h2.hot-movies Hot Movies
        ul.movie-list
          each movie in hotMovies
            li.movie-item
              a(href=`/movie/${movie.id}`)
                img(src=`/images/movies/${movie.image}`, alt=`${movie.title}`)
                h3.movie-title= movie.title
                p.rating
                  span.fa.fa-star
                  span.rating-value= movie.rating
              button.add-to-watchlist(type="button") Add to Watchlist

    section
      if latestMovies && latestMovies.length > 0
        h2.latest-movies Latest Update Movies
        ul.movie-list
          each movie in latestMovies
              li.movie-item
                a(href=`/movie/${movie.id}`)
                  img(src=`/images/movies/${movie.image}`, alt=`${movie.title}`)
                  h3.movie-title= movie.title
                  p.rating
                    span.fa.fa-star
                    span.rating-value= movie.rating
                button.add-to-watchlist(type="button") Add to Watchlist
    section
      if movieInWatchList && movieInWatchList.length > 0
        h2 Your Watch List
        ul.movie-list
          each movie in movieInWatchList
            li.movie-item
              a(href=`/movie/${movie.id}`)
                img(src=`/images/movies/${movie.image}`, alt=`${movie.title}`)
                h3.movie-title= movie.title
                p.rating
                  span.fa.fa-star
                  span.rating-value= movie.rating
          
  
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js")
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js')
